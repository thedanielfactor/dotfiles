# hyper (cmd + shift + alt + ctrl)
# meh (shift + alt + ctrl)
# Modes
:: default : sketchybar -m --set skhd icon="N" icon.color="0xff8aadf4" drawing=off 
:: launcher @ : sketchybar -m --set skhd icon="L" icon.color="0xffa6da95" drawing=on 
:: scripts @ : sketchybar -m --set skhd icon="S" icon.color="0xffed8796" drawing=on 
:: yabai @ : sketchybar -m --set skhd icon="Y" icon.color="0xfff28f88" drawing=on

# Mode Shortcuts
default, scripts, yabai < cmd - escape ; launcher 
launcher, scripts, yabai < escape ; default
default, launcher, yabai < ctrl - escape ; scripts
launcher, scripts, default < alt - escape ; yabai

# Application launchers
launcher < cmd - k : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~ && skhd -k escape
launcher < cmd - a : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~/Development/AE/code && skhd -k escape
launcher < cmd - o : /Applications/kitty.app/Contents/MacOS/kitty --single-instance -d ~/OldDogNewFlex.com/website && skhd -k escape
launcher < a : open /Applications/Arc.app && skhd -k escape
launcher < c : open /Applications/Google\ Chrome.app && skhd -k escape
launcher < f : open /Applications/Firefox.app && skhd -k escape
launcher < g : open /Applications/MongoDB Compass.app && skhd -k escape
launcher < i : open /Applications/IntelliJ\ IDEA.app && skhd -k escape
launcher < l : open /Applications/Mail.app && skhd -k escape
launcher < m : open /Applications/Messages.app && skhd -k escape
launcher < o : open /Applications/Obsidian.app && skhd -k escape
launcher < s : open /Applications/Safari.app && skhd -k escape
launcher < v : open /Applications/Visual\ Studio\ Code.app && skhd -k escape
launcher < x : open /Applications/Setapp/CleanShot X.app && skhd -k escape

# Toggle sketchybar
default < shift + lalt - space : sketchybar --bar hidden=toggle
default < shift + lalt - r : sketchybar --exit

# MacOS Commands
default < cmd - l : osascript -e 'tell application "System Events" to keystroke "q" using {command down,control down}';
scripts < meh - r : osascript -e 'tell app "loginwindow" to «event aevtrrst»';
scripts < meh - p : osascript -e 'tell app "loginwindow" to «event aevtrsdn»';

# Reload yabai 
yabai < lalt + cmd - r : bash -c 'launchctl kickstart -k "gui/${UID}/homebrew.mxcl.yabai"'

# Toggle split orientation of the selected windows node: shift + lalt - s
yabai < lalt - s : yabai -m window --toggle split

# Float / Unfloat window: lalt - space
yabai < lalt - space : yabai -m window --toggle float; sketchybar --trigger window_focus

# Make window zoom to fullscreen:
# default < shift + lalt - f : yabai -m window --toggle zoom-fullscreen; sketchybar --trigger window_focus
yabai < cmd - f : yabai -m query --spaces --window | grep '"type":"float"' && yabai -m space --layout bsp;\
          yabai -m query --windows --window | grep '"floating":1' && yabai -m window --toggle float;\
          yabai -m window --toggle zoom-fullscreen && sketchybar --trigger window_focus;

# Make window zoom to parent node:
yabai < lalt - f : yabai -m window --toggle zoom-parent; sketchybar --trigger window_focus

## Window Movement (ctrl + escape -> lalt - ...)
# Moving windows in spaces:
yabai < lalt - h : yabai -m window --warp west || $(yabai -m window --display west && sketchybar --trigger windows_on_spaces && yabai -m display --focus west && yabai -m window --warp last) || yabai -m window --move rel:-10:0
yabai < lalt - j : yabai -m window --warp south || $(yabai -m window --display south && sketchybar --trigger windows_on_spaces && yabai -m display --focus south) || yabai -m window --move rel:0:10
yabai < lalt - k : yabai -m window --warp north || $(yabai -m window --display north && sketchybar --trigger windows_on_spaces && yabai -m display --focus north) || yabai -m window --move rel:0:-10
yabai < lalt - l : yabai -m window --warp east || $(yabai -m window --display east && sketchybar --trigger windows_on_spaces && yabai -m display --focus east && yabai -m window --warp first) || yabai -m window --move rel:10:0

# Space Navigation 
yabai < ctrl - left : yabai -m space --focus prev
yabai < ctrl - right : yabai -m space --focus next 
yabai < ctrl - 1 : yabai -m space --focus 1 
yabai < ctrl - 2 : yabai -m space --focus 2 
yabai < ctrl - 3 : yabai -m space --focus 3 
yabai < ctrl - 4 : yabai -m space --focus 4 
yabai < ctrl - 5 : yabai -m space --focus 5 
yabai < ctrl - 6 : yabai -m space --focus 6 
yabai < ctrl - 7 : yabai -m space --focus 7 
yabai < ctrl - 8 : yabai -m space --focus 8 

# Window Navigation (through display borders): (NOT WORKING) 
yabai < ctrl + lalt - h : yabai -m window --focus west  || yabai -m display --focus west
yabai < ctrl + lalt - j : yabai -m window --focus south || yabai -m display --focus south
yabai < ctrl + lalt - k : yabai -m window --focus north || yabai -m display --focus north
yabai < ctrl + lalt - l : yabai -m window --focus east  || yabai -m display --focus east

# Moving windows between spaces: shift + lalt 
yabai < shift + lalt - 1 : yabai -m window --space 1;\
                   sketchybar --trigger windows_on_spaces
yabai < shift + lalt - 2 : yabai -m window --space 2;\
                   sketchybar --trigger windows_on_spaces
yabai < shift + lalt - 3 : yabai -m window --space 3;\
                   sketchybar --trigger windows_on_spaces
yabai < shift + lalt - 4 : yabai -m window --space 4;\
                   sketchybar --trigger windows_on_spaces
yabai < shift + lalt - 5 : yabai -m window --space 5;\
                   sketchybar --trigger windows_on_spaces
yabai < shift + lalt - 6 : yabai -m window --space 6;\
                   sketchybar --trigger windows_on_spaces
yabai < shift + lalt - 7 : yabai -m window --space 7;\
                   sketchybar --trigger windows_on_spaces

# Move windows to previous or next space
yabai < shift + lalt - p : yabai -m window --space prev; yabai -m space --focus prev; sketchybar --trigger windows_on_spaces
yabai < shift + lalt - n : yabai -m window --space next; yabai -m space --focus next; sketchybar --trigger windows_on_spaces

# Mirror Space on X and Y Axis: shift + lalt - {x, y}
yabai < shift + lalt - x : yabai -m space --mirror x-axis
yabai < shift + lalt - y : yabai -m space --mirror y-axis

## Stacks (shift + ctrl - ...)
# Add the active window to the window or stack to the {direction}: shift + ctrl - {j, k, l, ö}
yabai < ctrl - h : yabai -m window  west --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus
yabai < ctrl - j : yabai -m window south --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus
yabai < ctrl - k : yabai -m window north --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus
yabai < ctrl - l : yabai -m window  east --stack $(yabai -m query --windows --window | jq -r '.id'); sketchybar --trigger window_focus

# Stack Navigation: shift + ctrl - {n, p}
yabai < shift + ctrl - n : yabai -m window --focus stack.next
yabai < shift + ctrl - p : yabai -m window --focus stack.prev
yabai < shift + ctrl - right : yabai -m window --focus stack.next
yabai < shift + ctrl - left : yabai -m window --focus stack.prev

## Resize (ctrl + lalt - ...)
# Resize windows: ctrl + lalt - {j, k, l, ö}
yabai < ctrl + lalt - h : yabai -m window --resize right:-100:0 || yabai -m window --resize left:-100:0
yabai < ctrl + lalt - j : yabai -m window --resize bottom:0:100 || yabai -m window --resize top:0:100
yabai < ctrl + lalt - k : yabai -m window --resize bottom:0:-100 || yabai -m window --resize top:0:-100
yabai < ctrl + lalt - l : yabai -m window --resize right:100:0 || yabai -m window --resize left:100:0

# Equalize size of windows: ctrl + lalt - e
yabai < ctrl + lalt - e : yabai -m space --balance

# Enable / Disable gaps in current workspace: ctrl + lalt - g
yabai < ctrl + lalt - g : yabai -m space --toggle padding; yabai -m space --toggle gap

# Enable / Disable gaps in current workspace: ctrl + lalt - g
yabai < ctrl + lalt - b : yabai -m config window_border off 
yabai < shift + ctrl + lalt - b : yabai -m config window_border on

## Insertion (shift + ctrl + lalt - ...)
# Set insertion point for focused container: shift + ctrl + lalt - {j, k, l, ö, s}
yabai < shift + ctrl + lalt - h : yabai -m window --insert west
yabai < shift + ctrl + lalt - j : yabai -m window --insert south
yabai < shift + ctrl + lalt - k : yabai -m window --insert north
yabai < shift + ctrl + lalt - l : yabai -m window --insert east
yabai < shift + ctrl + lalt - s : yabai -m window --insert stack

## Misc
# New window in hor./ vert. splits for all applications with yabai
yabai < lalt - s : yabai -m window --insert east;  skhd -k "cmd - n"
yabai < lalt - v : yabai -m window --insert south; skhd -k "cmd - n"


# Yabai layouts
# toggle window split type
yabai < cmd - j : yabai -m window --toggle split

# float / unfloat window and center on screen
yabai < lalt - t : yabai -m window --toggle float; \
          yabai -m window --grid 4:4:1:1:2:2; \

yabai < shift + lalt - t : yabai -m window --toggle float;\
          yabai -m window --grid 20:20:1:1:18:18; \


# toggle sticky, float and resize to picture-in-picture size
yabai < lalt - p : yabai -m window --toggle sticky; \
           yabai -m window --grid 4:4:2:4:4:0; \

yabai < shift + lalt - z : yabai -m space --layout bsp
yabai < shift + lalt - x : yabai -m space --layout float
yabai < shift + lalt - c : yabai -m space --layout stack

